---
const { project } = Astro.props;
const { data } = project;
---

<article class="project-card rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 flex flex-col" style="background-color: #151515;">
    <div class="project-image-container">
        <img 
            src={data.img} 
            alt={data.title}
            class="w-full h-48 object-cover"
            style={data.imageScale ? `transform: scale(${data.imageScale});` : ''}
        />
    </div>
    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-white text-2xl font-bold mb-3">{data.title}</h3>
        <p class="text-gray-300 text-base mb-4 leading-relaxed flex-grow">
            {data.description}
        </p>
        {data['git-repository'] && (
            <a 
                href={data['git-repository']}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block text-white hover:text-gray-300 font-medium text-base transition-colors"
                style="padding-top: 20px;"
            >
                View on GitHub
            </a>
        )}
    </div>
</article>

<style>
    .project-card {
        transition: transform 0.3s ease;
    }

    .project-card:hover {
        transform: translateY(-5px);
    }

    .project-image-container {
        position: relative;
        overflow: hidden;
    }

    .project-image-container img {
        transition: transform 0.3s ease;
    }

    .project-card:hover .project-image-container img {
        transform: scale(1.05);
    }
</style>
