</style>

<script is:inline>
    class NavBarHandler {
        constructor() {
            this.topNavSec = document.getElementById("topNavSec");
            this.topNavWrapper = document.getElementById("topNavWrapper");
            this.stickyMenu = document.getElementById("stickyMenu");
            this.menuIcon = document.getElementById("menuIcon");
            this.navLinks = document.querySelectorAll(".center-btn-list li");
            this.isMenuOpen = false;
            this.lastScrollTop = 0;
            this.desktopBreakpoint = 768;
            if (this.topNavSec && this.stickyMenu) {
                this.init();
            } else {
                console.error("Elementos de navegaciÃ³n no encontrados.");
            }
        }
        init() {
            window.addEventListener("scroll", this.windowScroll.bind(this));
            window.addEventListener("resize", this.windowResize.bind(this));
            this.stickyMenu?.addEventListener("click", this.openNav.bind(this));
            this.navLinks.forEach((link) => {
                link.addEventListener("click", this.scrollToSection.bind(this));
            });
            this.windowScroll();
            this.windowResize();
        }
        windowScroll() {
            const scrollTop =
                window.scrollY || document.documentElement.scrollTop;
            const isDesktop = window.innerWidth > this.desktopBreakpoint;
            const isScrolled = scrollTop > 100;
            if (isDesktop) {
                if (isScrolled) {
                    this.topNavSec?.classList.add("fixed-nav");
                    if (this.topNavWrapper?.classList.contains("clicked")) {
                        this.topNavWrapper.classList.remove("clicked");
                        this.menuIcon?.classList.remove("fa-times");
                        this.menuIcon?.classList.add("fa-bars");
                    }
                } else {
                    this.topNavSec?.classList.remove("fixed-nav");
                    this.topNavWrapper?.classList.remove("clicked");
                }
            }
            if (
                window.innerWidth <= this.desktopBreakpoint &&
                this.isMenuOpen &&
                Math.abs(scrollTop - this.lastScrollTop) > 10
            ) {
                this.openNav();
            }
            this.lastScrollTop = scrollTop;
        }
        windowResize() {
            if (
                window.innerWidth <= 991 &&
                this.topNavSec?.classList.contains("fixed-nav")
            ) {
                this.topNavSec.classList.remove("fixed-nav");
            }
            if (window.innerWidth > this.desktopBreakpoint && this.isMenuOpen) {
                this.topNavSec?.classList.remove("mobile-opened");
                this.topNavWrapper?.classList.remove("clicked");
                this.isMenuOpen = false;
                this.menuIcon?.classList.remove("fa-times");
                this.menuIcon?.classList.add("fa-bars");
            }
        }
        openNav(event) {
            event?.preventDefault();
            if (
                window.innerWidth > this.desktopBreakpoint &&
                this.topNavSec?.classList.contains("fixed-nav")
            ) {
                this.topNavWrapper?.classList.toggle("clicked");
                const isClicked =
                    this.topNavWrapper?.classList.contains("clicked");
                if (this.menuIcon) {
                    this.menuIcon.classList.remove(
                        isClicked ? "fa-bars" : "fa-times",
                    );
                    this.menuIcon.classList.add(
                        isClicked ? "fa-times" : "fa-bars",
                    );
                }
            } else if (window.innerWidth <= this.desktopBreakpoint) {
                this.isMenuOpen = !this.isMenuOpen;
                this.topNavSec?.classList.toggle(
                    "mobile-opened",
                    this.isMenuOpen,
                );
                if (this.menuIcon) {
                    this.menuIcon.classList.remove(
                        this.isMenuOpen ? "fa-bars" : "fa-times",
                    );
                    this.menuIcon.classList.add(
                        this.isMenuOpen ? "fa-times" : "fa-bars",
                    );
                }
                document.body.style.overflow = this.isMenuOpen ? "hidden" : "";
            }
        }
        scrollToSection(event) {
            event.preventDefault();
            const targetElement = event.currentTarget;
            const targetId = targetElement.getAttribute("data-target");
            if (this.isMenuOpen) {
                this.openNav();
            }
            if (targetId) {
                const section = document.getElementById(targetId);
                if (section) {
                    const navHeight = this.topNavSec?.offsetHeight || 70;
                    let offsetTop =
                        section.getBoundingClientRect().top + window.scrollY;
                    offsetTop -= navHeight + 20;
                    window.scrollTo({
                        top: offsetTop,
                        behavior: "smooth",
                    });
                }
            }
        }
    }
    document.addEventListener("DOMContentLoaded", () => {
        new NavBarHandler();
    });
</script>
