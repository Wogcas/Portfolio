<script>
    document.addEventListener("DOMContentLoaded", function () {
        const topNav = document.getElementById("topNav");
        const stickyMenu = document.getElementById("stickyMenu");
        const hamburgerLines = document.getElementById("hamburgerLines");
        const closeIcon = document.getElementById("closeIcon");
        let lastScrollTop = 0;
        let isMenuOpen = false;

        function handleScroll() {
            const scrollTop =
                window.pageYOffset || document.documentElement.scrollTop;
            if (isMenuOpen) {
                return;
            }
            if (scrollTop > 100 && scrollTop > lastScrollTop) {
                topNav?.classList.add("collapsed");
            } else if (scrollTop < 50) {
                topNav?.classList.remove("collapsed");
            }
            lastScrollTop = scrollTop;
        }

        function toggleMenu() {
            isMenuOpen = !isMenuOpen;
            if (isMenuOpen) {
                if (hamburgerLines) hamburgerLines.style.display = "none";
                if (closeIcon) closeIcon.style.display = "block";
                topNav?.classList.remove("collapsed");
                topNav?.classList.add("menu-open");
            } else {
                if (hamburgerLines) hamburgerLines.style.display = "flex";
                if (closeIcon) closeIcon.style.display = "none";
                topNav?.classList.remove("menu-open");
                const scrollTop =
                    window.pageYOffset || document.documentElement.scrollTop;
                if (scrollTop > 100) {
                    topNav?.classList.add("collapsed");
                }
            }
        }

        window.addEventListener("scroll", handleScroll);
        stickyMenu?.addEventListener("click", toggleMenu);

        const navLinks = document.querySelectorAll(".center-btn-area a");
        navLinks.forEach((link) => {
            link.addEventListener("click", () => {
                if (isMenuOpen) {
                    toggleMenu();
                }
            });
        });
    });
</script>
