---
import Layout from "../layouts/Layout.astro";
import TopNavbar from "../components/TopNavbar.astro";
---

<Layout title="home">
    <TopNavbar />
    <div
        class="flex flex-col items-center justify-center min-h-screen text-center -mt-20"
        id="home"
    >
        <h3 class="text-white text-xl mb-2 font-medium shadow-text">
            Hello I'm
        </h3>
        <h1 class="text-white text-7xl font-extrabold m-0 shadow-text">
            Gael Castro
        </h1>
        <h1 class="text-white text-6xl font-extrabold mt-2 shadow-text">
            Full-Stack Web Developer
        </h1>
        <!-- <p class="text'white text'xl font-extrabold pt-30 shadow-text">Follow me around my portfolio!</p> -->
    </div>

    <!-- TEST -->
    <div class="py-8">
        <section
            id="about"
            class="min-h-screen py-16 px-8 my-8 flex flex-col justify-center items-center text-center"
        >
            <h2 class="text-white text-5xl mb-8 shadow-text">About Me</h2>
            <p class="text-white text-xl max-w-2xl leading-relaxed">
                This is the about section...
            </p>
        </section>

        <section
            id="experience"
            class="min-h-screen py-16 px-8 my-8 flex flex-col justify-center items-center text-center"
        >
            <h2 class="text-white text-5xl mb-8 shadow-text">Experience</h2>
            <p class="text-white text-xl max-w-2xl leading-relaxed">
                This is the experience section...
            </p>
        </section>

        <section
            id="portfolio"
            class="min-h-screen py-16 px-8 my-8 flex flex-col justify-center items-center text-center"
        >
            <h2 class="text-white text-5xl mb-8 shadow-text">Portfolio</h2>
            <p class="text-white text-xl max-w-2xl leading-relaxed">
                This is the portfolio section...
            </p>
        </section>

        <section
            id="education"
            class="min-h-screen py-16 px-8 my-8 flex flex-col justify-center items-center text-center"
        >
            <h2 class="text-white text-5xl mb-8 shadow-text">Education</h2>
            <p class="text-white text-xl max-w-2xl leading-relaxed">
                This is the education section...
            </p>
        </section>

        <section
            id="contact"
            class="min-h-screen py-16 px-8 my-8 flex flex-col justify-center items-center text-center"
        >
            <h2 class="text-white text-5xl mb-8 shadow-text">Contact</h2>
            <p class="text-white text-xl max-w-2xl leading-relaxed">
                This is the contact section...
            </p>
        </section>
    </div>
</Layout>

<style>
    .shadow-text {
        text-shadow:
            0 0 8px rgba(255, 255, 255, 0.2),
            0 0 16px rgba(255, 255, 255, 0.15);
    }

    @media (max-width: 600px) {
        .text-7xl {
            font-size: 2.2rem;
        }

        .text-6xl {
            font-size: 1.5rem;
        }

        .text-xl {
            font-size: 1rem;
        }

        .min-h-screen {
            min-height: 60vh;
        }

        .pt-20 {
            padding-top: 100px;
        }

        .text-5xl {
            font-size: 2rem;
        }

        .px-8 {
            padding-left: 10px;
            padding-right: 10px;
        }
    }
</style>
